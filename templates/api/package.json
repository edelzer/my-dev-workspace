{
  "name": "api-project-template",
  "version": "1.0.0",
  "description": "Professional Node.js/Express API with comprehensive security and BMAD integration",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:debug": "tsx watch --inspect src/index.ts",
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "copy-assets": "copyfiles -u 1 src/**/*.{json,yaml,yml,html} dist/",
    "clean": "rimraf dist coverage .nyc_output",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:tdd": "jest --watch --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "security:scan": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "security:snyk": "snyk test",
    "security:deps": "npx better-npm-audit audit --level moderate",
    "performance:test": "autocannon -c 100 -d 30 http://localhost:3000",
    "db:migrate": "npx prisma migrate deploy",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "logs:tail": "pm2 logs --lines 100",
    "logs:flush": "pm2 flush",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js -o swagger.json './src/routes/*.ts'",
    "docs:serve": "swagger-ui-serve swagger.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "prestart": "npm run build",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.7.0",
    "express-slow-down": "^1.6.0",
    "express-validator": "^6.15.0",
    "cors": "^2.8.5",
    "helmet": "^6.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "@prisma/client": "^4.15.0",
    "redis": "^4.6.6",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "nodemailer": "^6.9.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "uuid": "^9.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/nodemailer": "^6.4.7",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^9.0.1",
    "@types/lodash": "^4.14.195",
    "@types/jest": "^29.5.1",
    "@types/supertest": "^2.0.12",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.3",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "prisma": "^4.15.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "autocannon": "^7.11.0",
    "snyk": "^1.1143.0",
    "nodemon": "^2.0.22",
    "pm2": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts",
      "!src/config/*.ts",
      "!src/types/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/src/test/setup.ts"],
    "testTimeout": 10000
  }
}