# Environment Configuration
ENVIRONMENT=development
DEBUG=true
PORT=8080

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/app_db?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=password
DB_NAME=app_db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONN_MAX_LIFETIME_MINUTES=60
DB_CONN_MAX_IDLE_MINUTES=10
DB_LOG_LEVEL=info

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2
REDIS_POOL_TIMEOUT_SECONDS=30
REDIS_IDLE_TIMEOUT_MINUTES=5
REDIS_IDLE_CHECK_FREQUENCY_MINUTES=1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=24
JWT_ISSUER=go-api

# Security Configuration
BCRYPT_COST=12
SESSION_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With

# Logging Configuration
LOG_LEVEL=info

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_URL=/health

# API Keys (for external services)
API_KEY_SERVICE_1=your-api-key-here
API_KEY_SERVICE_2=another-api-key-here

# Feature Flags
FEATURE_EMAIL_VERIFICATION=true
FEATURE_RATE_LIMITING=true
FEATURE_AUDIT_LOGGING=true

# External Service URLs
EXTERNAL_SERVICE_URL=https://api.external-service.com
WEBHOOK_URL=https://your-app.com/webhooks

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_PREFIX=go-api:

# Performance Configuration
READ_TIMEOUT_SECONDS=15
WRITE_TIMEOUT_SECONDS=15
IDLE_TIMEOUT_SECONDS=60

# Development Tools
AIR_BUILD_CMD=go build -o ./tmp/main ./cmd/server
AIR_BUILD_DIR=./tmp
AIR_INCLUDE_EXT=go,tpl,tmpl,html
AIR_EXCLUDE_DIR=assets,tmp,vendor,node_modules