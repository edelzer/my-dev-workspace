{
  "name": "web-project-template",
  "version": "1.0.0",
  "description": "Professional React/TypeScript web application with BMAD integration",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "dev:network": "vite --host 0.0.0.0",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.json",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "type-coverage": "typescript-coverage-report",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "security:scan": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "security:deps": "npx better-npm-audit audit --level moderate",
    "accessibility:test": "axe-playwright",
    "performance:audit": "lighthouse-ci autorun",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-query": "^3.39.3",
    "react-hook-form": "^7.43.5",
    "zod": "^3.20.6",
    "@hookform/resolvers": "^2.9.11",
    "axios": "^1.3.4",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "react-helmet-async": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.2",
    "@vitest/ui": "^0.29.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@playwright/test": "^1.31.1",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/addon-interactions": "^7.0.0",
    "@storybook/addon-links": "^7.0.0",
    "@storybook/blocks": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@storybook/react-vite": "^7.0.0",
    "@storybook/testing-library": "^0.0.14-next.1",
    "axe-playwright": "^1.2.3",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-accessibility": "^5.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.18.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lighthouse-ci": "^0.11.1",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "storybook": "^7.0.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^5.0.2",
    "typescript-coverage-report": "^0.7.0",
    "vite": "^4.2.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.14.4",
    "vitest": "^0.29.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}