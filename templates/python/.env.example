# FastAPI Professional Template Environment Configuration

# Application Settings
PROJECT_NAME="FastAPI Professional Template"
VERSION="1.0.0"
ENVIRONMENT="development"  # development, testing, staging, production
DEBUG=true
HOST="0.0.0.0"
PORT=8000

# Security Settings
SECRET_KEY="your-super-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_EXPIRE_SECONDS=3600
ALGORITHM="HS256"

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/fastapi_template"
# For SQLite (development): sqlite:///./app.db
# For MySQL: mysql://user:password@localhost:3306/fastapi_template

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2

# CORS Settings
ALLOWED_HOSTS="http://localhost:3000,http://localhost:8080,https://yourdomain.com"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
RATE_LIMIT_STORAGE_URL="redis://localhost:6379/3"

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json, text
LOG_FILE=""  # Leave empty for console logging
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# Email Settings (for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_TLS=true

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH="uploads"

# Security Headers
SECURITY_X_CONTENT_TYPE_OPTIONS="nosniff"
SECURITY_X_FRAME_OPTIONS="DENY"
SECURITY_X_XSS_PROTECTION="1; mode=block"
SECURITY_STRICT_TRANSPORT_SECURITY="max-age=31536000; includeSubDomains"
SECURITY_CONTENT_SECURITY_POLICY="default-src 'self'"
SECURITY_REFERRER_POLICY="strict-origin-when-cross-origin"

# Security Settings (with SECURITY_ prefix)
SECURITY_MIN_PASSWORD_LENGTH=8
SECURITY_REQUIRE_UPPERCASE=true
SECURITY_REQUIRE_LOWERCASE=true
SECURITY_REQUIRE_NUMBERS=true
SECURITY_REQUIRE_SPECIAL_CHARS=true
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_ACCOUNT_LOCKOUT_DURATION=900
SECURITY_PASSWORD_RESET_TOKEN_EXPIRE=3600
SECURITY_MAX_REQUEST_SIZE=1048576
SECURITY_MAX_JSON_DEPTH=10
SECURITY_SANITIZE_INPUT=true

# Monitoring and Observability
ENABLE_METRICS=true
METRICS_PATH="/metrics"
HEALTH_CHECK_PATH="/health"

# External Services
# Add your external service configurations here
# EXTERNAL_API_URL=""
# EXTERNAL_API_KEY=""

# Development Settings
# These are only used in development environment
DEV_RELOAD=true
DEV_LOG_SQL=true
DEV_CORS_ALLOW_ALL=true

# Production Settings
# These override other settings in production
PROD_SECURE_COOKIES=true
PROD_HTTPS_ONLY=true
PROD_HIDE_DOCS=true

# Testing Settings
TEST_DATABASE_URL="sqlite:///./test.db"
TEST_REDIS_URL="redis://localhost:6379/15"