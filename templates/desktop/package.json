{
  "name": "desktop-project-template",
  "version": "1.0.0",
  "description": "Professional Electron desktop application with BMAD integration",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "tsx watch --clear-screen=false src/main/index.ts",
    "dev:renderer": "vite",
    "dev:debug": "tsx watch --inspect src/main/index.ts",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:watch": "concurrently \"npm run build:main -- --watch\" \"npm run build:renderer -- --watch\"",
    "build:windows": "electron-builder --windows",
    "build:macos": "electron-builder --macos",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --windows --macos --linux",
    "build:portable": "electron-builder --windows portable --macos dmg --linux AppImage",
    "start": "electron .",
    "start:prod": "NODE_ENV=production electron .",
    "test": "vitest",
    "test:tdd": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:performance": "vitest run --config vitest.performance.config.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit",
    "security:scan": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "security:snyk": "snyk test",
    "notarize:macos": "electron-notarize",
    "sign:windows": "electron-builder --windows --publish never",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder --publish always",
    "release:draft": "electron-builder --publish never",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-updater": "^5.3.0",
    "electron-store": "^8.1.0",
    "electron-log": "^4.4.8",
    "electron-context-menu": "^3.6.1",
    "electron-window-state": "^5.0.3",
    "axios": "^1.4.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "semver": "^7.5.1",
    "fs-extra": "^11.1.1",
    "node-machine-id": "^1.1.12",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "electron-notarize": "^1.2.2",
    "electron-devtools-installer": "^3.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "vite": "^4.3.9",
    "vitest": "^0.32.2",
    "@vitest/coverage-c8": "^0.32.2",
    "@vitest/ui": "^0.32.2",
    "@playwright/test": "^1.35.1",
    "playwright-electron": "^0.4.0",
    "concurrently": "^8.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/lodash": "^4.14.195",
    "@types/uuid": "^9.0.2",
    "@types/fs-extra": "^11.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.13.0",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "prettier": "^2.8.8",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "snyk": "^1.1178.0",
    "jsdom": "^22.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "Your Desktop App",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": {
        "teamId": "YOUR_TEAM_ID"
      },
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "msi",
          "arch": ["x64", "ia32"]
        }
      ],
      "publisherName": "Your Company Name",
      "certificateFile": "build/certificate.p12",
      "certificatePassword": "",
      "signtoolOptions": {
        "certificateFile": "build/certificate.p12",
        "certificatePassword": ""
      }
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "snap",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-github-username",
        "repo": "your-repo-name"
      }
    ]
  },
  "homepage": ".",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/your-repo.git"
  },
  "keywords": [
    "electron",
    "desktop",
    "cross-platform",
    "typescript",
    "react",
    "bmad"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT"
}