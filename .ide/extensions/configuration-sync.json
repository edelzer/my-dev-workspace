{
  "extensionConfigurationSync": {
    "version": "1.0.0",
    "description": "Cross-platform extension configuration synchronization for VS Code, Cursor, and Windsurf",
    "synchronization_strategy": {
      "sync_scope": "workspace_and_user_settings",
      "conflict_resolution": "timestamp_based_with_manual_override",
      "sync_frequency": "real_time_with_debouncing",
      "storage_backend": "git_based_with_cloud_backup"
    },
    "sync_categories": {
      "extension_settings": {
        "description": "Extension-specific configuration settings",
        "sync_enabled": true,
        "sync_granularity": "per_extension_per_setting",
        "conflict_handling": "merge_with_user_preference",
        "examples": [
          {
            "extension": "esbenp.prettier-vscode",
            "settings": {
              "prettier.singleQuote": true,
              "prettier.tabWidth": 2,
              "prettier.useTabs": false
            },
            "sync_priority": "high"
          },
          {
            "extension": "dbaeumer.vscode-eslint",
            "settings": {
              "eslint.autoFixOnSave": true,
              "eslint.validate": ["javascript", "typescript", "react"]
            },
            "sync_priority": "critical"
          }
        ]
      },
      "keybindings": {
        "description": "Custom keybinding configurations",
        "sync_enabled": true,
        "platform_adaptation": "os_specific_keybindings",
        "conflict_handling": "user_choice_required",
        "examples": [
          {
            "command": "editor.action.formatDocument",
            "key": "shift+alt+f",
            "when": "editorHasDocumentFormattingProvider",
            "platform_specific": {
              "mac": "shift+cmd+f",
              "windows": "shift+alt+f",
              "linux": "shift+ctrl+f"
            }
          }
        ]
      },
      "snippets": {
        "description": "Code snippets and templates",
        "sync_enabled": true,
        "language_scoped": true,
        "version_control": "track_snippet_evolution",
        "examples": [
          {
            "language": "typescript",
            "snippet_name": "react_component",
            "body": [
              "interface ${1:ComponentName}Props {",
              "  $2",
              "}",
              "",
              "export const ${1:ComponentName}: React.FC<${1:ComponentName}Props> = ({ $3 }) => {",
              "  return (",
              "    <div>$4</div>",
              "  );",
              "};"
            ]
          }
        ]
      },
      "workspace_settings": {
        "description": "Workspace-specific configurations",
        "sync_enabled": true,
        "inheritance_model": "workspace_overrides_user",
        "project_context": "adapt_to_project_type",
        "examples": [
          {
            "setting": "editor.tabSize",
            "project_web": 2,
            "project_api": 4,
            "project_mobile": 2
          }
        ]
      },
      "ui_customizations": {
        "description": "Editor theme, color schemes, and UI preferences", 
        "sync_enabled": true,
        "personal_vs_team": "team_defaults_with_personal_overrides",
        "accessibility_preservation": true
      }
    },
    "sync_storage": {
      "primary_storage": {
        "type": "git_repository",
        "repository": ".ide-sync/",
        "branch_strategy": "user_specific_branches",
        "encryption": "user_specific_keys",
        "compression": "gzip"
      },
      "cloud_backup": {
        "enabled": true,
        "providers": {
          "github_gist": {
            "enabled": true,
            "private_gists": true,
            "sync_frequency": "daily"
          },
          "dropbox": {
            "enabled": false,
            "folder": "/Apps/IDE-Config-Sync",
            "sync_frequency": "hourly"
          },
          "google_drive": {
            "enabled": false,
            "folder": "IDE-Config-Sync",
            "sync_frequency": "hourly"
          }
        }
      },
      "local_cache": {
        "enabled": true,
        "cache_location": ".ide/.cache/sync",
        "cache_size_limit": "100MB",
        "cache_expiry": "30_days"
      }
    },
    "cross_platform_adaptation": {
      "path_normalization": {
        "enabled": true,
        "strategy": "relative_paths_with_workspace_root",
        "platform_specific_overrides": {
          "file_separators": "auto_convert",
          "case_sensitivity": "preserve_original",
          "special_directories": "map_to_platform_equivalents"
        }
      },
      "feature_compatibility": {
        "editor_specific_features": {
          "cursor_specific": "preserve_with_fallback_for_vscode",
          "vscode_specific": "preserve_with_fallback_for_cursor",
          "windsurf_specific": "preserve_with_fallback_for_both"
        },
        "unsupported_feature_handling": "disable_with_notification"
      },
      "editor_detection": {
        "automatic_detection": true,
        "detection_methods": [
          "process_name_analysis",
          "config_file_patterns",
          "api_endpoint_detection"
        ],
        "fallback_behavior": "use_vscode_compatible_settings"
      }
    },
    "sync_triggers": {
      "automatic_triggers": [
        {
          "trigger": "extension_settings_change",
          "debounce_interval": "5_seconds",
          "batch_similar_changes": true
        },
        {
          "trigger": "workspace_open",
          "action": "pull_latest_configurations",
          "force_sync": false
        },
        {
          "trigger": "workspace_close",
          "action": "push_local_changes",
          "include_unsaved": false
        },
        {
          "trigger": "scheduled_sync",
          "frequency": "every_30_minutes",
          "active_hours_only": true
        }
      ],
      "manual_triggers": [
        {
          "command": "sync:pull",
          "description": "Pull latest configurations from remote",
          "confirmation_required": false
        },
        {
          "command": "sync:push",
          "description": "Push local configurations to remote", 
          "confirmation_required": true
        },
        {
          "command": "sync:status",
          "description": "Show synchronization status and pending changes",
          "show_diff": true
        },
        {
          "command": "sync:reset",
          "description": "Reset local configurations to remote state",
          "confirmation_required": true,
          "backup_local": true
        }
      ]
    },
    "conflict_resolution": {
      "conflict_types": {
        "setting_conflicts": {
          "detection": "value_comparison_with_metadata",
          "resolution_strategies": [
            "use_most_recent_timestamp",
            "use_workspace_specific_value",
            "merge_non_conflicting_properties",
            "prompt_user_for_choice"
          ],
          "default_strategy": "prompt_user_for_choice"
        },
        "keybinding_conflicts": {
          "detection": "key_combination_overlap",
          "resolution_strategies": [
            "use_platform_specific_binding",
            "disable_conflicting_binding",
            "remap_to_available_combination"
          ],
          "default_strategy": "prompt_user_for_choice"
        },
        "snippet_conflicts": {
          "detection": "name_and_scope_collision",
          "resolution_strategies": [
            "rename_with_suffix",
            "merge_snippet_variants",
            "keep_both_with_different_scopes"
          ],
          "default_strategy": "keep_both_with_different_scopes"
        }
      },
      "conflict_ui": {
        "conflict_viewer": "side_by_side_diff",
        "resolution_interface": "interactive_conflict_resolver",
        "batch_resolution": "apply_same_strategy_to_similar_conflicts",
        "conflict_history": "track_resolution_decisions_for_learning"
      }
    },
    "team_collaboration": {
      "shared_configurations": {
        "team_settings_inheritance": {
          "enabled": true,
          "inheritance_order": ["team", "project", "user"],
          "override_permissions": "user_can_override_non_critical"
        },
        "configuration_governance": {
          "required_settings": "enforce_team_coding_standards",
          "recommended_settings": "suggest_with_explanation",
          "prohibited_settings": "prevent_with_warning"
        }
      },
      "onboarding_integration": {
        "new_team_member_setup": {
          "auto_apply_team_settings": true,
          "preserve_personal_preferences": true,
          "guided_setup_wizard": true
        },
        "project_specific_setup": {
          "detect_project_requirements": true,
          "apply_project_configurations": true,
          "validate_setup_completeness": true
        }
      }
    },
    "security_and_privacy": {
      "data_protection": {
        "encryption_at_rest": "AES_256",
        "encryption_in_transit": "TLS_1_3",
        "key_management": "user_controlled_keys",
        "data_anonymization": "remove_personal_identifiers"
      },
      "access_control": {
        "authentication": "editor_session_based",
        "authorization": "user_owns_their_configurations",
        "audit_logging": "track_sync_operations"
      },
      "privacy_settings": {
        "telemetry_collection": "opt_in_only",
        "error_reporting": "anonymized_error_reports",
        "usage_analytics": "local_only_by_default"
      }
    },
    "monitoring_and_diagnostics": {
      "sync_health_monitoring": {
        "success_rate_tracking": "percentage_of_successful_syncs",
        "performance_metrics": "sync_duration_and_data_size",
        "error_categorization": "network_vs_conflict_vs_storage_errors"
      },
      "user_experience_metrics": {
        "sync_frequency": "how_often_users_sync",
        "conflict_resolution_patterns": "most_common_conflict_types",
        "feature_usage": "which_sync_features_are_used_most"
      },
      "diagnostic_tools": {
        "sync_log_viewer": "detailed_sync_operation_logs",
        "configuration_diff_viewer": "visualize_configuration_differences",
        "sync_status_dashboard": "real_time_sync_health_overview"
      }
    },
    "migration_and_backup": {
      "configuration_backup": {
        "automatic_backups": "before_each_sync_operation",
        "backup_retention": "30_days_of_backups",
        "backup_compression": "compress_old_backups",
        "backup_verification": "verify_backup_integrity"
      },
      "migration_tools": {
        "cross_editor_migration": "convert_configurations_between_editors",
        "version_upgrade_migration": "adapt_to_new_extension_versions",
        "bulk_import_export": "mass_configuration_operations"
      },
      "disaster_recovery": {
        "full_configuration_restoration": "restore_complete_setup",
        "selective_restoration": "restore_specific_configurations",
        "emergency_reset": "restore_to_default_with_backup"
      }
    }
  }
}