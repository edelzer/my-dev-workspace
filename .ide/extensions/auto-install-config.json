            "description": "Enhanced TypeScript support",
            "priority": "critical",
            "all_projects": true
          },
          {
            "id": "bradlc.vscode-tailwindcss",
            "name": "Tailwind CSS IntelliSense",
            "description": "Tailwind CSS class completion",
            "priority": "high",
            "project_types": ["web", "mobile"]
          },
          {
            "id": "ms-vscode.vscode-json",
            "name": "JSON Language Features",
            "description": "JSON syntax and validation",
            "priority": "critical",
            "all_projects": true
          },
          {
            "id": "redhat.vscode-yaml",
            "name": "YAML Language Support",
            "description": "YAML syntax and validation",
            "priority": "high",
            "all_projects": true
          }
        ]
      },
      "code_quality": {
        "category": "Code Quality & Linting",
        "extensions": [
          {
            "id": "dbaeumer.vscode-eslint",
            "name": "ESLint",
            "description": "JavaScript and TypeScript linting",
            "priority": "critical",
            "project_types": ["web", "api", "mobile"]
          },
          {
            "id": "esbenp.prettier-vscode",
            "name": "Prettier",
            "description": "Code formatting",
            "priority": "critical",
