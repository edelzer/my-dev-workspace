            "all_projects": true
          },
          {
            "id": "SonarSource.sonarlint-vscode",
            "name": "SonarLint",
            "description": "Code quality and security analysis",
            "priority": "high",
            "all_projects": true
          }
        ]
      },
      "testing": {
        "category": "Testing & Debugging",
        "extensions": [
          {
            "id": "ms-vscode.vscode-jest",
            "name": "Jest",
            "description": "Jest testing framework support",
            "priority": "high",
            "project_types": ["web", "api"]
          },
          {
            "id": "ms-playwright.playwright",
            "name": "Playwright Test for VS Code",
            "description": "End-to-end testing with Playwright",
            "priority": "high",
            "project_types": ["web"]
          },
          {
            "id": "ms-vscode.vscode-node-debug2",
            "name": "Node.js Debugger",
            "description": "Node.js debugging support",
            "priority": "critical",
            "project_types": ["api"]
          }
        ]
      },
      "git_collaboration": {
        "category": "Git & Collaboration",
        "extensions": [
          {
            "id": "eamodio.gitlens",
            "name": "GitLens",
            "description": "Enhanced Git capabilities",
            "priority": "critical",
            "all_projects": true
          },
          {
            "id": "GitHub.vscode-pull-request-github",
            "name": "GitHub Pull Requests and Issues",
