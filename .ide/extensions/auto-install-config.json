{
  "extensionAutoInstallConfig": {
    "version": "1.0.0",
    "description": "Automated extension installation and management for VS Code, Cursor, and Windsurf",
    "supported_editors": {
      "vscode": {
        "identifier": "vscode",
        "extension_marketplace": "https://marketplace.visualstudio.com",
        "install_command": "code --install-extension",
        "list_command": "code --list-extensions",
        "settings_sync": ".vscode/extensions.json"
      },
      "cursor": {
        "identifier": "cursor",
        "extension_marketplace": "https://marketplace.visualstudio.com",
        "install_command": "cursor --install-extension",
        "list_command": "cursor --list-extensions",
        "settings_sync": ".cursor/extensions.json"
      },
      "windsurf": {
        "identifier": "windsurf", 
        "extension_marketplace": "https://marketplace.visualstudio.com",
        "install_command": "windsurf --install-extension",
        "list_command": "windsurf --list-extensions",
        "settings_sync": ".windsurf/extensions.json"
      }
    },
    "essential_extensions": {
      "development_core": {
        "category": "Core Development Tools",
        "extensions": [
          {
            "id": "ms-vscode.vscode-typescript-next",
