            "name": "Tabnine",
            "description": "AI code completion",
            "priority": "low",
            "all_projects": false
          }
        ]
      }
    },
    "project_specific_extensions": {
      "web": {
        "description": "React/TypeScript web development extensions",
        "extensions": [
          {
            "id": "ms-vscode.vscode-react-native",
            "name": "React Native Tools",
            "description": "React Native development support"
          },
          {
            "id": "formulahendry.auto-rename-tag",
            "name": "Auto Rename Tag",
            "description": "Automatic HTML/JSX tag renaming"
          },
          {
            "id": "christian-kohler.path-intellisense",
            "name": "Path Intellisense",
            "description": "File path autocomplete"
          }
        ]
      },
      "api": {
        "description": "Node.js/Express API development extensions",
        "extensions": [
          {
            "id": "humao.rest-client",
            "name": "REST Client",
            "description": "HTTP request testing"
          },
          {
            "id": "ms-vscode.vscode-docker",
            "name": "Docker",
            "description": "Docker container management"
          },
          {
            "id": "mongodb.mongodb-vscode",
            "name": "MongoDB for VS Code",
            "description": "MongoDB database integration"
          }
        ]
      },
      "mobile": {
        "description": "React Native mobile development extensions",
        "extensions": [
          {
            "id": "ms-vscode.vscode-react-native",
            "name": "React Native Tools",
            "description": "React Native development support"
          },
          {
            "id": "expo.vscode-expo-tools",
            "name": "Expo Tools",
            "description": "Expo development support"
          },
          {
            "id": "ms-vscode.vscode-android",
            "name": "Android iOS Emulator",
            "description": "Mobile device emulation"
          }
        ]
      },
      "desktop": {
        "description": "Electron desktop development extensions",
        "extensions": [
          {
            "id": "ms-vscode.vscode-electron",
            "name": "Electron",
            "description": "Electron development support"
          },
          {
            "id": "ms-vscode.vscode-docker",
            "name": "Docker",
            "description": "Container support for packaging"
          }
        ]
      }
    },
    "installation_strategies": {
      "new_project_setup": {
        "trigger": "project_initialization",
        "method": "automatic_with_confirmation",
        "install_order": ["critical", "high", "medium", "low"],
        "rollback_on_failure": true
      },
      "workspace_detection": {
        "trigger": "workspace_file_analysis",
        "method": "intelligent_recommendation",
        "analysis_patterns": [
          {
            "pattern": "package.json with react dependencies",
            "project_type": "web",
            "confidence": 0.9
          },
          {
            "pattern": "package.json with express dependencies", 
            "project_type": "api",
            "confidence": 0.8
          },
          {
            "pattern": "metro.config.js or react-native dependencies",
            "project_type": "mobile",
            "confidence": 0.95
          },
          {
            "pattern": "electron-builder or electron dependencies",
            "project_type": "desktop",
            "confidence": 0.9
          }
        ]
      },
      "manual_installation": {
        "trigger": "user_command",
        "method": "interactive_selection",
        "ui_interface": "command_palette_or_settings"
      },
      "batch_installation": {
        "trigger": "team_onboarding",
        "method": "configuration_file_based",
        "configuration_sharing": "via_git_repository"
      }
    },
    "installation_automation": {
      "scripts": {
        "install_all_critical": {
          "description": "Install all critical priority extensions",
          "command": "npm run install:extensions:critical",
          "script_path": "scripts/install-critical-extensions.js"
        },
        "install_project_specific": {
          "description": "Install extensions based on project type detection",
          "command": "npm run install:extensions:project",
          "script_path": "scripts/install-project-extensions.js"
        },
        "sync_team_extensions": {
          "description": "Sync extensions with team configuration",
          "command": "npm run sync:extensions:team",
          "script_path": "scripts/sync-team-extensions.js"
        }
      },
      "hooks": {
        "pre_install": {
          "description": "Verification hooks before extension installation",
          "actions": [
            "check_editor_availability",
            "verify_extension_marketplace_access",
            "validate_system_requirements"
          ]
        },
        "post_install": {
          "description": "Configuration hooks after extension installation",
          "actions": [
            "apply_extension_settings",
            "verify_extension_functionality",
            "update_workspace_configuration"
          ]
        }
      }
    },
    "error_handling": {
      "installation_failures": {
        "retry_strategy": {
          "max_retries": 3,
          "retry_delay": "exponential_backoff",
          "fallback_action": "manual_installation_guidance"
        },
        "failure_reporting": {
          "log_location": "logs/extension-installation.log",
          "error_categorization": ["network", "permissions", "compatibility"],
          "user_notification": "detailed_error_with_resolution_steps"
        }
      },
      "compatibility_issues": {
        "detection": "version_compatibility_matrix",
        "resolution": "suggest_alternative_extensions",
        "documentation": "compatibility_troubleshooting_guide"
      }
    },
    "configuration_management": {
      "settings_synchronization": {
        "enabled": true,
        "sync_settings": true,
        "sync_keybindings": true,
        "sync_snippets": true,
        "sync_extensions": true,
        "excluded_settings": ["personal_tokens", "local_paths"]
      },
      "workspace_settings": {
        "shared_settings": ".ide/shared-settings.json",
        "local_overrides": ".ide/local-settings.json",
        "team_standards": ".ide/team-standards.json"
      },
      "version_management": {
        "extension_versions": "track_and_pin_versions",
        "update_policy": "manual_approval_required",
        "rollback_capability": "previous_version_restoration"
      }
    }
  }
}