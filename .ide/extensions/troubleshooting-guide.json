    "troubleshooting_procedures": {
      "step_by_step_guides": {
        "installation_troubleshooting": {
          "title": "Extension Installation Issues",
          "estimated_time": "15-30 minutes",
          "steps": [
            {
              "step": 1,
              "action": "Verify network connectivity",
              "description": "Test connection to extension marketplace",
              "commands": ["curl -I https://marketplace.visualstudio.com"],
              "expected_result": "HTTP 200 OK response"
            },
            {
              "step": 2,
              "action": "Check available disk space",
              "description": "Ensure sufficient space for extension installation",
              "commands": ["df -h (Linux/Mac)", "dir (Windows)"],
              "expected_result": "At least 1GB free space"
            },
            {
              "step": 3,
              "action": "Clear extension cache",
              "description": "Remove potentially corrupted cache files",
              "commands": ["rm -rf ~/.vscode/extensions/.cache"],
              "expected_result": "Cache directory cleared"
            },
            {
              "step": 4,
              "action": "Restart editor",
              "description": "Fresh start with cleared cache",
              "commands": ["Close and reopen editor"],
              "expected_result": "Editor starts normally"
            },
            {
              "step": 5,
              "action": "Retry installation",
              "description": "Attempt extension installation again",
              "commands": ["Use marketplace or command line installation"],
              "expected_result": "Successful installation"
            }
          ]
        },
        "performance_troubleshooting": {
          "title": "Extension Performance Issues",
          "estimated_time": "20-45 minutes",
          "steps": [
            {
              "step": 1,
              "action": "Open performance profiler",
              "description": "Access built-in performance monitoring",
              "commands": ["Developer: Startup Performance"],
              "expected_result": "Performance data displayed"
            },
            {
              "step": 2,
              "action": "Identify resource-heavy extensions",
              "description": "Find extensions consuming most resources",
              "commands": ["Analyze performance data"],
              "expected_result": "List of resource-intensive extensions"
            },
            {
              "step": 3,
              "action": "Disable high-impact extensions",
              "description": "Temporarily disable resource-heavy extensions",
              "commands": ["Extensions view > Disable"],
              "expected_result": "Extensions disabled"
            },
            {
              "step": 4,
              "action": "Test performance improvement",
              "description": "Evaluate editor performance without heavy extensions",
              "commands": ["Perform normal development tasks"],
              "expected_result": "Improved responsiveness"
            },
            {
              "step": 5,
              "action": "Selectively re-enable extensions",
              "description": "Re-enable extensions one by one",
              "commands": ["Extensions view > Enable"],
              "expected_result": "Identify specific problematic extension"
            }
          ]
        }
      },
