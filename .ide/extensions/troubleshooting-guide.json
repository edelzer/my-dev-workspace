    "common_issues": {
      "installation_failures": {
        "category": "Installation & Setup",
        "severity": "high",
        "frequency": "common",
        "symptoms": [
          "Extension fails to install from marketplace",
          "Installation hangs or times out",
          "Permission denied errors during installation",
          "Dependency resolution failures"
        ],
        "root_causes": [
          {
            "cause": "network_connectivity_issues",
            "probability": 0.4,
            "diagnostic_steps": [
              "Test marketplace connectivity: `curl -I https://marketplace.visualstudio.com`",
              "Check proxy settings and corporate firewalls",
              "Verify DNS resolution for marketplace URLs",
              "Test with different network connection"
            ],
            "resolution_steps": [
              "Configure proxy settings in editor preferences",
              "Add marketplace domains to firewall whitelist",
              "Use manual extension installation (.vsix files)",
              "Contact IT team for network access"
            ]
          },
          {
            "cause": "insufficient_permissions",
            "probability": 0.3,
            "diagnostic_steps": [
              "Check user account permissions",
              "Verify write access to extensions directory",
              "Test with elevated privileges (temporarily)",
              "Review file system permissions"
            ],
            "resolution_steps": [
              "Run editor as administrator (Windows)",
              "Use sudo for installation commands (Mac/Linux)",
              "Modify file permissions for extensions directory",
              "Change extension installation directory"
            ]
          },
          {
            "cause": "corrupted_extension_cache",
            "probability": 0.2,
            "diagnostic_steps": [
              "Check extension cache directory size and integrity",
              "Look for partial or corrupted downloads",
              "Verify extension manifest files",
              "Check available disk space"
            ],
            "resolution_steps": [
              "Clear extension cache: rm -rf ~/.vscode/extensions/.cache",
              "Restart editor and retry installation",
              "Free up disk space",
              "Manual cache cleanup and rebuild"
            ]
          }
        ]
      },
