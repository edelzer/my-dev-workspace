          "configuration_state": "ide_settings_project_config_validation"
        }
      },
      "correlation_engine": {
        "error_relationships": {
          "causal_analysis": "identify_root_cause_and_symptom_relationships",
          "temporal_correlation": "analyze_error_occurrence_patterns",
          "spatial_correlation": "identify_errors_in_related_code_sections",
          "dependency_mapping": "map_errors_to_dependency_issues"
