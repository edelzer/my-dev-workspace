{
  "diagnosticErrorSharingIntegration": {
    "version": "1.0.0",
    "description": "Real-time error sharing and diagnostic integration between IDEs and Claude Code",
    "integration_scope": {
      "supported_ides": ["vscode", "cursor", "windsurf", "intellij", "pycharm", "webstorm"],
      "error_types": ["syntax", "semantic", "runtime", "build", "test", "lint", "security"],
      "sharing_modes": ["real_time", "batch", "on_demand", "triggered"]
    },
    "real_time_sharing": {
      "error_detection": {
        "ide_integration": {
          "language_server_protocol": {
            "enabled": true,
            "diagnostic_providers": ["typescript", "eslint", "python", "java"],
            "real_time_updates": true,
            "batch_threshold": 5
          },
          "native_ide_apis": {
            "vscode_diagnostic_api": "vscode.languages.getDiagnostics",
            "intellij_inspection_api": "com.intellij.codeInspection.InspectionManager",
            "error_polling_interval": "1_second"
          }
        },
        "error_classification": {
          "severity_levels": ["error", "warning", "info", "hint"],
          "categories": ["syntax", "type", "logic", "style", "performance", "security"],
          "priority_scoring": "weighted_algorithm_based_on_impact",
          "context_enrichment": "add_surrounding_code_context"
        }
      },
      "transmission_protocol": {
        "communication_method": "websocket_with_http_fallback",
        "data_format": "structured_json_with_metadata",
        "compression": "gzip_for_large_payloads",
        "encryption": "tls_1_3_with_certificate_pinning",
        "authentication": "oauth2_with_refresh_tokens"
      },
      "error_aggregation": {
        "deduplication": {
          "enabled": true,
          "matching_criteria": ["file_path", "line_number", "error_message", "rule_id"],
          "time_window": "30_seconds",
          "similarity_threshold": 0.8
        },
        "batching": {
          "enabled": true,
          "batch_size": 10,
          "time_threshold": "5_seconds",
          "priority_bypass": "immediate_for_critical_errors"
        }
      }
    },
    "claude_integration": {
      "context_preparation": {
        "code_context": {
          "surrounding_lines": 10,
          "related_files": "import_dependencies_and_usage",
          "project_context": "package_json_tsconfig_relevant_configs",
          "git_context": "recent_commits_and_branch_info"
        },
        "error_context": {
          "error_history": "recent_similar_errors_in_project",
          "resolution_history": "previous_successful_resolutions",
          "team_knowledge": "shared_error_resolution_database",
          "documentation_links": "relevant_documentation_and_guides"
        }
      },
      "ai_analysis": {
        "error_interpretation": {
          "root_cause_analysis": "analyze_underlying_causes",
          "impact_assessment": "evaluate_error_severity_and_scope",
          "resolution_suggestions": "provide_multiple_resolution_options",
          "explanation_quality": "detailed_but_accessible_explanations"
        },
        "solution_generation": {
          "code_fixes": "generate_specific_code_corrections",
          "configuration_fixes": "suggest_configuration_adjustments",
          "workflow_improvements": "recommend_process_improvements",
          "learning_resources": "provide_educational_content"
        }
      },
      "response_delivery": {
        "response_format": {
          "structured_response": "categorized_solutions_with_confidence_scores",
          "code_snippets": "syntax_highlighted_with_explanations",
          "step_by_step_guides": "numbered_instructions_with_verification",
          "related_resources": "links_to_documentation_and_examples"
        },
        "delivery_channels": {
          "ide_integration": "display_directly_in_editor_as_code_actions",
          "side_panel": "dedicated_diagnostic_panel_with_details",
          "notifications": "non_intrusive_notifications_for_critical_issues",
          "external_tools": "integration_with_issue_trackers_and_docs"
        }
      }
    },
    "diagnostic_aggregation_system": {
      "multi_source_collection": {
        "ide_diagnostics": {
          "language_servers": "collect_from_typescript_python_java_servers",
          "linting_tools": "eslint_pylint_checkstyle_integration",
          "build_tools": "webpack_maven_gradle_error_collection",
          "testing_frameworks": "jest_pytest_junit_failure_analysis"
        },
        "system_diagnostics": {
          "performance_metrics": "cpu_memory_disk_usage_correlation",
