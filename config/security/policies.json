{
  "authentication": {
    "providers": {
      "local": {
        "enabled": true,
        "usernameField": "email",
        "passwordField": "password",
        "caseSensitive": false
      },
      "oauth": {
        "enabled": false,
        "providers": ["google", "github", "microsoft"],
        "redirectUrl": "${OAUTH_REDIRECT_URL}",
        "scopes": {
          "google": ["profile", "email"],
          "github": ["user:email"],
          "microsoft": ["profile", "email"]
        }
      },
      "saml": {
        "enabled": false,
        "entityId": "${SAML_ENTITY_ID}",
        "entryPoint": "${SAML_ENTRY_POINT}",
        "certificate": "${SAML_CERTIFICATE}"
      },
      "ldap": {
        "enabled": false,
        "url": "${LDAP_URL}",
        "bindDN": "${LDAP_BIND_DN}",
        "bindCredentials": "${LDAP_BIND_PASSWORD}",
        "searchBase": "${LDAP_SEARCH_BASE}",
        "searchFilter": "(uid={{username}})"
      }
    },
    "mfa": {
      "enabled": false,
      "required": false,
      "providers": ["totp", "sms", "email"],
      "gracePeriod": "7d",
      "backupCodes": {
        "enabled": true,
        "count": 10,
        "length": 8
      }
    },
    "session": {
      "strategy": "jwt",
      "storage": "redis",
      "cookie": {
        "name": "session",
        "httpOnly": true,
        "secure": true,
        "sameSite": "strict",
        "maxAge": "1h"
      },
      "redis": {
        "prefix": "session:",
        "ttl": 3600
      }
    }
  },
  "authorization": {
    "strategy": "rbac",
    "roles": {
      "admin": {
        "permissions": ["*"],
        "description": "Full system access"
      },
      "user": {
        "permissions": ["read:profile", "update:profile", "read:data"],
        "description": "Standard user access"
      },
      "readonly": {
        "permissions": ["read:*"],
        "description": "Read-only access"
      }
    },
    "permissions": {
      "create:users": "Create new users",
      "read:users": "View user information",
      "update:users": "Modify user information",
      "delete:users": "Remove users",
      "read:profile": "View own profile",
      "update:profile": "Modify own profile",
      "read:data": "View application data",
      "write:data": "Modify application data",
      "admin:system": "System administration"
    },
    "resourceAccess": {
      "inheritance": true,
      "defaultDeny": true,
      "hierarchical": true
    }
  },
  "accountSecurity": {
    "password": {
      "policy": {
        "minLength": 8,
        "maxLength": 128,
        "requireUppercase": true,
        "requireLowercase": true,
        "requireNumbers": true,
        "requireSpecialChars": true,
        "forbidCommonPasswords": true,
        "forbidPersonalInfo": true,
        "forbidRepeatingChars": true,
        "maxConsecutiveChars": 3
      },
      "history": {
        "enabled": true,
        "count": 5,
        "minAge": "1d"
      },
      "expiration": {
        "enabled": false,
        "maxAge": "90d",
        "warningDays": 14
      }
    },
    "lockout": {
      "enabled": true,
      "maxAttempts": 5,
      "duration": "30m",
      "progressiveLockout": true,
      "resetOnSuccess": true,
      "notifyUser": true
    },
    "registration": {
      "enabled": true,
      "requireEmailVerification": true,
      "allowedDomains": [],
      "blockedDomains": ["tempmail.com", "10minutemail.com"],
      "autoApproval": true,
      "defaultRole": "user"
    },
    "passwordReset": {
      "enabled": true,
      "tokenExpiry": "1h",
      "maxAttempts": 3,
      "cooldown": "5m",
      "requireEmailVerification": true,
      "notifyOnReset": true
    }
  },
  "apiSecurity": {
    "rateLimit": {
      "global": {
        "requests": 1000,
        "window": "1h",
        "skipSuccessfulRequests": false,
        "skipFailedRequests": false
      },
      "auth": {
        "requests": 10,
        "window": "1m",
        "skipSuccessfulRequests": true
      },
      "api": {
        "requests": 100,
        "window": "1m",
        "skipSuccessfulRequests": false
      }
    },
    "cors": {
      "enabled": true,
      "strictMode": true,
      "preflightMaxAge": 86400,
      "exposedHeaders": ["X-Total-Count", "X-Page-Count"]
    },
    "headers": {
      "security": {
        "contentTypeOptions": "nosniff",
        "frameOptions": "DENY",
        "xssProtection": "1; mode=block",
        "referrerPolicy": "strict-origin-when-cross-origin",
        "strictTransportSecurity": "max-age=31536000; includeSubDomains; preload"
      },
      "csp": {
        "enabled": true,
        "reportOnly": false,
        "directives": {
          "defaultSrc": ["'self'"],
          "scriptSrc": ["'self'"],
          "styleSrc": ["'self'", "'unsafe-inline'"],
          "imgSrc": ["'self'", "data:", "https:"],
          "fontSrc": ["'self'"],
          "connectSrc": ["'self'"],
          "objectSrc": ["'none'"],
          "mediaSrc": ["'self'"],
          "frameSrc": ["'none'"]
        }
      }
    },
    "validation": {
      "strictMode": true,
      "maxRequestSize": "10MB",
      "maxParameterLength": 1000,
      "maxHeaderSize": 8192,
      "allowedMethods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"],
      "parameterPollution": "reject"
    }
  },
  "monitoring": {
    "securityEvents": {
      "enabled": true,
      "events": [
        "login_success",
        "login_failure",
        "password_change",
        "account_lockout",
        "privilege_escalation",
        "data_access",
        "configuration_change"
      ],
      "alerting": {
        "enabled": true,
        "thresholds": {
          "failed_logins": 10,
          "account_lockouts": 5,
          "privilege_escalations": 1
        },
        "recipients": ["security@company.com"]
      }
    },
    "auditLogging": {
      "enabled": true,
      "retention": "7y",
      "fields": [
        "timestamp",
        "userId",
        "action",
        "resource",
        "ipAddress",
        "userAgent",
        "success",
        "errorCode"
      ],
      "encryption": true,
      "integrity": true
    },
    "anomalyDetection": {
      "enabled": false,
      "mlModel": "isolation_forest",
      "sensitivity": 0.1,
      "features": ["login_times", "ip_addresses", "user_agents", "access_patterns"]
    }
  },
  "compliance": {
    "dataProtection": {
      "classification": {
        "enabled": true,
        "levels": ["public", "internal", "confidential", "restricted"],
        "defaultLevel": "internal"
      },
      "retention": {
        "enabled": true,
        "policies": {
          "user_data": "7y",
          "logs": "3y",
          "audit_trails": "7y",
          "temporary_files": "30d"
        }
      },
      "encryption": {
        "atRest": true,
        "inTransit": true,
        "keyRotation": "30d"
      }
    },
    "accessControl": {
      "principleOfLeastPrivilege": true,
      "regularAccessReview": "90d",
      "segregationOfDuties": true,
      "approvalWorkflows": {
        "privilegedAccess": true,
        "dataAccess": false,
        "configurationChanges": true
      }
    }
  }
}