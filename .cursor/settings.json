{
  "cursor.general.enableTabs": true,
  "cursor.cpp.includePath": ["./"],
  "cursor.chat.maxTokens": 4096,
  "cursor.chat.model": "gpt-4-turbo-2024-04-09",
  "cursor.composer.maxTokens": 8192,
  "cursor.composer.model": "claude-3-5-sonnet-20241022",
  "cursor.tab.autocompleteInComments": true,
  "cursor.tab.enableAutoCompleteForPlainText": true,
  "cursor.tab.enableAutoCompleteInStrings": true,
  "cursor.tab.enableLSPIntegration": true,
  "cursor.tab.enableMultilineCompletion": true,
  "cursor.tab.enableSmartCompletion": true,
  "cursor.tab.maxPrefixLines": 100,
  "cursor.tab.maxSuffixLines": 20,
  "cursor.tab.recentFilesMaxCount": 50,
  "cursor.tab.useAdditionalContext": true,
  "cursor.tab.useCodebaseContext": true,
  "cursor.tab.useRecentFiles": true,
  "cursor.tab.useSimilarFiles": true,
  "cursor.autocomplete.delay": 50,
  "cursor.autocomplete.partialAccepts": true,
  "cursor.autocomplete.useAdditionalContext": true,
  "cursor.codebase.indexing": "enabled",
  "cursor.codebase.includeNodeModules": false,
  "cursor.codebase.maxFileSize": 1048576,
  "cursor.codebase.respectGitignore": true,
  "cursor.terminal.enableCommandSuggestions": true,
  "cursor.terminal.enableCtrlK": true,
  "cursor.terminal.enableIntelligentHistory": true,
  "cursor.terminal.maxHistorySize": 1000,
  "cursor.workspace.indexPath": ".cursor/index",
  "cursor.workspace.enableSharedIndex": true,
  "cursor.memory.enablePersistentMemory": true,
  "cursor.memory.maxMemorySize": 104857600,
  "cursor.rules.enableRuleEngine": true,
  "cursor.background.enableAsyncProcessing": true,
  "cursor.background.maxConcurrentTasks": 4,
  "cursor.performance.enableOptimizations": true,
  "cursor.performance.preloadCommonFiles": true,
  "typescript.suggest.autoImports": "on",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "javascript.suggest.autoImports": "on",
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "editor.wordBasedSuggestions": "allDocuments",
  "editor.acceptSuggestionOnEnter": "smart",
  "files.associations": {
    "*.bmad": "yaml",
    "*.claude": "markdown"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.git": true,
    "**/.DS_Store": true
  }
}