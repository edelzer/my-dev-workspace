{
  "name": "semgrep-mcp",
  "description": "AI-powered security code review using Semgrep MCP server integration",
  "version": "1.0.0",
  "mcp_server": {
    "command": "uvx",
    "args": [
      "semgrep-mcp"
    ],
    "env": {
      "SEMGREP_APP_TOKEN": "${SEMGREP_APP_TOKEN}",
      "SEMGREP_RULES": "auto",
      "SEMGREP_TIMEOUT": "30"
    }
  },
  "security_config": {
    "rulesets": {
      "javascript": {
        "enabled": true,
        "rules": [
          "p/javascript",
          "p/typescript",
          "p/react",
          "p/nodejs",
          "p/security-audit",
          "p/owasp-top-10"
        ],
        "severity_filter": [
          "ERROR",
          "WARNING",
          "INFO"
        ],
        "confidence_threshold": 0.85
      },
      "python": {
        "enabled": true,
        "rules": [
          "p/python",
          "p/django",
          "p/flask",
          "p/security-audit",
          "p/owasp-top-10"
        ],
        "severity_filter": [
          "ERROR",
          "WARNING",
          "INFO"
        ],
        "confidence_threshold": 0.85
      },
      "java": {
        "enabled": true,
        "rules": [
          "p/java",
          "p/spring",
          "p/security-audit",
          "p/owasp-top-10"
        ],
        "severity_filter": [
          "ERROR",
          "WARNING",
          "INFO"
        ],
        "confidence_threshold": 0.85
      },
      "go": {
        "enabled": true,
        "rules": [
          "p/golang",
          "p/security-audit",
          "p/owasp-top-10"
        ],
        "severity_filter": [
          "ERROR",
          "WARNING",
          "INFO"
        ],
        "confidence_threshold": 0.85
      }
    },
    "analysis_config": {
      "max_scan_time": 1200,
      "max_memory_mb": 1024,
      "fail_open": false,
      "auto_fix": false,
      "batch_size": 25,
      "enable_caching": false
    },
    "validation_engine": {
      "false_positive_reduction": {
        "enabled": true,
        "confidence_threshold": 0.85,
        "false_positive_threshold": 0.02,
        "context_analysis": true,
        "context_window_size": 8,
        "framework_awareness": true
      },
      "risk_assessment": {
        "enabled": true,
        "severity_mapping": {
          "CRITICAL": 8.549999999999999,
          "HIGH": 5.95,
          "MEDIUM": 3,
          "LOW": 0.8999999999999999,
          "INFO": 1
        },
        "business_context": true,
        "exploitability_analysis": true
      },
      "learning_engine": {
        "enabled": false,
        "learning_rate": 0.01,
        "feedback_integration": true,
        "model_updates": "disabled"
      },
      "performance_optimization": {
        "max_validation_time": 1200000,
        "parallel_processing": false,
        "memory_optimization": true,
        "result_caching": false
      }
    }
  },
  "production_features": {
    "audit_logging": true,
    "strict_mode": true,
    "compliance_reporting": true,
    "emergency_mode": true,
    "monitoring_integration": true
  },
  "integration": {
    "claude_code": {
      "enabled": true,
      "commands": [
        "ai-security-scan",
        "ai-security-validate",
        "ai-security-report",
        "ai-security-tune"
      ],
      "auto_validation": true,
      "result_caching": false
    },
    "workflow_integration": {
      "pre_commit": true,
      "pull_request": true,
      "ci_cd": true,
      "deployment_gates": true
    },
    "agent_coordination": {
      "security_specialist": true,
      "spec_reviewer": true,
      "spec_validator": true,
      "multi_agent_consensus": true
    }
  },
  "monitoring": {
    "metrics": {
      "scan_performance": true,
      "accuracy_tracking": true,
      "false_positive_rate": true,
      "throughput_monitoring": true,
      "resource_usage": true
    },
    "alerts": {
      "critical_findings": true,
      "performance_degradation": true,
      "tool_failures": true,
      "accuracy_degradation": true
    },
    "reporting": {
      "daily_summaries": true,
      "weekly_trends": true,
      "monthly_analysis": true,
      "compliance_reports": true
    }
  },
  "metadata": {
    "generated_at": "2025-08-16T17:05:59.505Z",
    "environment": "production",
    "optimization": "balanced",
    "tuning_version": "1.0.0",
    "parameter_source": "ai_tuning_analysis"
  }
}